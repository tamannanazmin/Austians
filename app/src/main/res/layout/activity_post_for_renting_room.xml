<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostForRentingRoom">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/Toolbar"
                layout="@layout/app_bar_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp" />
            <EditText
                android:id="@+id/locationforRoom"
                android:layout_below="@id/Toolbar"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_edit_text_bg"
                android:drawableStart="@drawable/ic_location_on_black_24dp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:hint="Location"
                />
            <EditText
                android:id="@+id/MonthforRoom"
                android:layout_below="@id/locationforRoom"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edit_text_bg"
                android:drawableStart="@drawable/calendersmall"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:hint="Month"
                />
            <EditText
                android:id="@+id/costforRoom"
                android:layout_below="@id/MonthforRoom"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edit_text_bg"
                android:drawableStart="@drawable/cost"
                android:drawableLeft="@drawable/cost"
                android:hint="Cost(Taka)"
                />
            <EditText
                android:id="@+id/detailsforRoom"
                android:layout_below="@id/costforRoom"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edit_text_bg"
                android:hint="Details....."
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addPhotoForRoom"
                android:layout_below="@id/detailsforRoom"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_photo_camera_black_24dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsforRoom"
                android:layout_alignTop="@id/addPhotoForRoom"
                android:layout_toRightOf="@id/addPhotoForRoom"
                android:layout_alignBottom="@id/addPhotoForRoom"
                android:id="@+id/image"
                android:text="Photos/ Videos"
                android:textColor="#111010"
                android:layout_marginLeft="0dp"
                android:textSize="15dp"
                android:background="#68A0A4A7"
                android:textIsSelectable="false"
                android:gravity="center"
                />
            <Button
                android:id="@+id/shareforRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addPhotoForRoom"
                android:text="Share"
                android:background="#10413D"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#F1EDED"
                android:textSize="20dp"
                />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>