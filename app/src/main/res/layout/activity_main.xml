<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/bb"
    >

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Registration"
        android:gravity="center"
        android:textSize="50dp"
        android:textColor="#F1EDED"

        />

    <EditText
        android:layout_below="@+id/heading"
        android:id="@+id/name"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:inputType="text"
        android:textColorHint="#7A8F8F"
        android:hint="Name"
        android:drawableStart="@drawable/ic_account_box_black_24dp"
        android:drawableLeft="@drawable/ic_account_box_black_24dp"
        android:drawablePadding="8dp"
        android:textCursorDrawable="@null"
        android:textColor="#F1EDED"
        android:background="@drawable/custom_edit_text_bg"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:layout_below="@+id/name"
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:inputType="textEmailAddress"
        android:textColorHint="#7A8F8F"
        android:hint="Email"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="8dp"
        android:textCursorDrawable="@null"
        android:background="@drawable/custom_edit_text_bg"
        android:textColor="#F1EDED"
        />

    <EditText
        android:layout_below="@id/email"
        android:id="@+id/phn"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:inputType="phone"
        android:layout_marginLeft="20dp"
        android:textColorHint="#7A8F8F"
        android:hint="Phone number"
        android:drawableStart="@drawable/ic_phone_black_24dp"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:drawablePadding="8dp"
        android:textCursorDrawable="@null"
        android:background="@drawable/custom_edit_text_bg"
        android:textColor="#F1EDED"
        />


    <Spinner
        android:layout_below="@id/phn"
        android:id="@+id/department"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:entries="@array/department"

        android:background="@drawable/custom_edit_text_bg"
        >
    </Spinner>

    <Spinner
        android:layout_below="@id/department"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:entries="@array/semester"
        android:id="@+id/semester"
        android:background="@drawable/custom_edit_text_bg"
        >

    </Spinner>
    <EditText
        android:layout_below="@id/semester"
        android:id="@+id/ID"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:inputType="phone"
        android:layout_marginLeft="20dp"
        android:textColorHint="#7A8F8F"
        android:hint="ID(1702040**)"
        android:drawableStart="@drawable/ic_phone_black_24dp"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:drawablePadding="8dp"
        android:textCursorDrawable="@null"
        android:background="@drawable/custom_edit_text_bg"
        android:textColor="#F1EDED"
        />

    <EditText
        android:layout_below="@id/ID"
        android:id="@+id/password"
        android:layout_width="350dp"
        android:layout_marginLeft="20dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:layout_marginTop="30dp"
        android:textColorHint="#7A8F8F"
        android:hint="Password"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="8dp"
        android:textCursorDrawable="@null"
        android:background="@drawable/custom_edit_text_bg"
        android:textColor="#F1EDED"
        />

    <EditText
        android:layout_below="@id/password"
        android:id="@+id/confirmPassword"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textPassword"
        android:textColorHint="#7A8F8F"
        android:layout_marginTop="30dp"
        android:hint="Confirm Password"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="8dp"
        android:textCursorDrawable="@null"
        android:background="@drawable/custom_edit_text_bg"
        android:textColor="#F1EDED"
        />
    <CheckBox
        android:layout_below="@id/confirmPassword"
        android:id="@+id/agreeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:text="I agree with the terms and conditions for Registration."
        android:layout_marginTop="30dp"
        android:textColor="#F1EDED"
        />

    <Button
        android:layout_below="@+id/agreeCheckBox"

        android:id="@+id/registerId"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Register"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#F1EDED"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:background="#102B29"
       android:textIsSelectable="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        />

</RelativeLayout>


</ScrollView>